{
  "manifest_version": 3,
  "name": "Diba JSON View",
  "version": "1.4.0",
  "description": "Prettify JSON for Web Pages Content",
  "author": "Bahman World <bahman.world@gmail.com>",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["icon.png", "logo.png", "index.css"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ]
}
